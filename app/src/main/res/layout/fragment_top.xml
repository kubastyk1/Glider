<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_gravity="center_horizontal|top"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/findAirportButton"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#000000"
        android:padding="20dp"
        android:background="@drawable/button_selector_left"
        android:text="@string/findAirportButton"
        android:layout_width="140dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/emergencyLandingButton"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:padding="20dp"
        android:background="@drawable/button_selector_right"
        android:text="@string/emergencyLandingButton"
        android:layout_width="140dp" />
</LinearLayout>
